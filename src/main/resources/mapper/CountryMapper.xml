<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CountryMapper">
    <insert id="addCountry" parameterType="MCountry">
        insert into
        t_country
        (id, `name`, nameEng)
        values
        (#{id}, #{name}, #{nameEng})
    </insert>

    <update id="modifyCountry" parameterType="MCountry">
        update t_country
        <trim prefix="set" suffixOverrides=",">
            <if test="name !=null ">`name` = #{name},</if>
            <if test="nameEng !=null ">`nameEng` = #{nameEng},</if>
        </trim>
        where id = #{id}
    </update>

    <select id="getCountry" parameterType="MCountry" resultType="MCountry">
        select * from t_country where id = #{id}
    </select>

    <select id="getCountryList" parameterType="MCountry" resultType="MCountry">
        select * from t_country
        where 1 = 1
        <if test="id != null" >
            and id = #{id}
        </if>

        <if test="name != null" >
            and `name` = #{name}
        </if>
        order by `name` desc
    </select>
</mapper>